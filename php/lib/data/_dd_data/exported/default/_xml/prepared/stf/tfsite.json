e existing rel if any\n\t\t\tvar strDelete = \"delete from USERDB_SITE where FK_SITE_NAME = '\" + app.g.pfs(_swdoc.oSite().site_name) + \"' and FK_KEYSEARCH = '\" + app.g.pfs(strKey) +\"'\";\n\t\t\tapp.g.submitsql(strDelete,true);\n\t\t\t\n\t\t}\n\t\t\n\t\t_swdoc.load_site_customers();\n\t}\t\n\telse if(nItemID == iNewContact)\n\t{\n\t\t\/\/-- NWJ\n    \t\/\/-- Open new contact form\n    \t\/\/-- pass in pk_company_auto_id so that we can link the two\n    \tvar strURL = \"fk_company_id=\" + app.pfu(_swdoc.oSite().fk_company_id) + \"&site=\" + app.pfu(_swdoc.oSite().site_name);\n\t\tapp.g.sl_openformforadd(sl_contacts,\"TfCustomer\", strURL, 1,null,function()\n\t\t{\n\t\t\t_swdoc.load_site_customers();\n\t\t});\t\t\n\t}\n\telse if(nItemID == iDeleteContact)\n\t{\n\t\t\n\t\t\/\/-- 29.07.2004\n    \t\/\/-- NWJ\n    \t\/\/-- Delete the selected contact\n    \tvar selectedRow     = sl_contacts.curSel;\n    \tvar strConfirm\t\t= \"Are you sure you want to delete this customer from the database ?\";\n    \n\t\tapp.g.sl_deldbrow(sl_contacts,selectedRow,'keysearch',null,strConfirm);\n\t\t_swdoc.load_site_customers();\n\t}\n\telse if (nItemID == iSearchAdd)\n\t{\n\t\n\t\t\/\/-- show list of company customers, that are not currently linked to this site, that can link to this site\n\t\tvar strKeysearchValues = app.g.sl_get_valuesdel(sl_contacts,\"keysearch\",\",\",\"'\", true);\n\t\tif(strKeysearchValues==\"\")strKeysearchValues=\"''\";\n\t\tvar strURL = \"in_filter=fk_company_id='\" + app.pfu(app.g.pfs(_swdoc.oSite().fk_company_id)) + \"' and keysearch not in (\" + strKeysearchValues + \")\";\n\t\tapp.g.popup(\"browse_customers\", strURL, function(oForm)\n\t\t{\n\t\t\tif (oForm.document.strselectedpfskeys==\"\") return;\n\t\t \t  \t\t\t\n   \t\t\t\/\/- ask user to confirm that site is the customers main site \n   \t\t\tif(confirm(\"Is this site the main site for the selected customer(s)?\"))\n   \t\t\t{\n\t\t\t\t\/\/-- update  userdb\n\t\t\t\tvar strSQL = \"update USERDB set SITE = '\" + app.g.pfs(_swdoc.oSite().site_name) + \"' where KEYSEARCH in (\" + oForm.document.strselectedpfskeys + \")\";\n\t\t\t\tapp.g.submitsql(strSQL,false);\n\t\t\t}\t\n\t\t\telse\n\t\t\t{\n\t\t\t\t\/\/-- delete existing rel if any\n\t\t\t\tvar strDelete = \"delete from USERDB_SITE where FK_SITE_NAME = '\" + app.g.pfs(_swdoc.oSite().site_name) + \"' and FK_KEYSEARCH in (\" + oForm.document.strselectedpfskeys +\")\";\n\t\t\t\tapp.g.submitsql(strDelete,true);\n\t\t\t\t\n\t\t\t\t\/\/-- create new rels\n\t\t\t\tvar strKeysearch, strinsert = \"\";\n\t\t\t\tvar arrayKeys = oForm.document.strselectedpfskeys.split(\",\");\n\t\t\t\tfor(var x=0; x< arrayKeys.length;x++)\n\t\t\t\t{\n\t\t\t\t\tstrKeysearch = arrayKeys[x];\n\t\t\t\t\tstrInsert = \"insert into USERDB_SITE (FK_SITE_NAME,FK_KEYSEARCH) values ('\" + app.g.pfs(_swdoc.oSite().site_name) + \"',\" + strKeysearch + \")\";\n\t\t\t\t\tapp.g.submitsql(strInsert,true);\t\t\t\t\n\t\t\t\t}\n\t\t\t}\t\n\t\t\t_swdoc.load_site_customers();\n\t\t\t\t\t\n\t\t\treturn;\n\t\t});\n\t}\n}"},{"name":"sl_asset1_OnItemSelected","code":"sl_asset1_OnItemSelected(nRow)\n{\n\tapp._een(mbtn_view_ci1 , (sl_asset1.rowCount()>0));\n\n}"},{"name":"mbtn_view_ci_OnMenuItem","code":"mbtn_view_ci_OnMenuItem(strName, nItemID)\n{\n  \tvar iProperties = 1;\n\tvar iVCMParents = 2;\t\n\tvar iVCMChildren = 5;\t\t\n\tvar iInventory = 3;\n\tvar iChangeSchedule = 4;\n\n\t\/\/-- get intCI\n  \tvar strAssetID = app.g.sl_getrawcolvalue(sl_asset,-1,\"equipid\");\n  \tif(strAssetID!=\"\")\n  \t{ \t\n\t\tif(nItemID == iProperties)\n\t\t{\n\t\t\tsl_asset.EditRecord(sl_asset.curSel);\n\t\t\tsl_asset.Refresh();\n\t\t\treturn;\n    \t}\n\t\telse if(nItemID == iInventory)\n\t\t{\n\t\t\tapp.g.view_inventory(strAssetID,strAssetID);\n\t\t}\n\t\n\t}\n}"},{"name":"sl_asset_OnItemSelected","code":"sl_asset_OnItemSelected(nRow)\n{\n\tvar strID = sl_asset.GetItemTextRaw(nRow, \"equipid\");\n\tapp._een(mbtn_view_ci , (strID!=\"\"));\n}"},{"name":"mbtn_asset_actions_OnMenuItem","code":"mbtn_asset_actions_OnMenuItem(strName, nItemID)\n{\n\tvar iAssignCI = 1;\n\tvar iRemoveCI = 2;\t\n\tvar iCreateAsset = 3;\n\tvar iDeleteAsset = 4;\n\t\n\t\/\/-- get asset id\n \tvar strAssetID = sl_asset.GetItemTextRaw(sl_asset.curSel,\"equipid\");\t\n\t\n\tif(nItemID == iAssignCI)\n\t{\t\n\t\t\/\/-- browse for company assets and associate\n\t\tvar strEquipidValues = app.g.sl_get_valuesdel(sl_asset,\"equipid\",\",\",\"'\", true);\n\t\tif(strEquipidValues==\"\")strEquipidValues=\"''\";\n\t\tvar strURL = \"in_filter=fk_company_id='\" + app.pfu(app.g.pfs(_swdoc.oSite().fk_company_id)) + \"' and equipid not in (\" + strEquipidValues + \")\";\n\n\t\tapp.OpenForm(\"browse_assets\", strURL, true,function(oForm)\n\t\t{\n\t\t\tif(oForm.document.strselectedpfskeys==\"\") return;\n\t\t\telse\n\t\t\t{\n\t\t\t\tvar strUpdate = \"update EQUIPMNT set SITE = '\" + app.g.pfs(_swdoc.oSite().site_name) + \"' where EQUIPID in (\" + oForm.document.strselectedpfskeys + \")\";\n\t\t\t\tif(app.g.submitsql(strUpdate,true))\n\t\t\t\t{\n\t\t\t\t\t\/\/ -- Updated site table\n\t\t\t\t\t_swdoc.MF().sl_asset.Refresh();\n\t\t\t\t}\n\t\t\t}\n\t\t});\n    }\n\telse if(nItemID == iRemoveCI)\n\t{\n\t\t\/\/-- remove link between asset and site\n\t\tif (strAssetID!=\"\")\n    \t{\n    \t\tif (!confirm(\"Are you sure you want to disassociate the selected asset from this site ?\")) return;\n    \n    \t\t\/\/-- update asset where main site is this one\t\t\n\t\t\tvar strUpdate = \"update EQUIPMNT set SITE = '' where EQUIPID = '\" + app.g.pfs(strAssetID) + \"' and SITE='\" + app.g.pfs(_swdoc.oSite().site_name) + \"'\";\n\t\t\tif(app.g.submitsql(strUpdate,true))\n\t\t\t{\n\t\t\t\t\/\/ -- Update site table\n\t\t\t\t_swdoc.MF().sl_asset.Refresh();\n\t\t\t}\n    \t} \t\t\n\t}\n\n\tif(nItemID == iDeleteAsset)\n\t{\n\t\t\/\/-- delete asset\n\t\tif (strAssetID!=\"\")\n    \t{   \t\n \t\t\tvar selectedRow     = sl_asset.curSel;\n    \t\tvar strConfirm\t\t= \"Are you sure you want to delete this asset from the database ?\";   \t\t\n\t\t\tif(app.g.sl_deldbrow(sl_asset,selectedRow,\"equipid\",null,strConfirm))\n\t\t\t{\n\t\t\t\t\/\/-- remove from asset_site table\n\t\t\t}\t    \t\n    \t}\n\t}\n\telse if(nItemID == iCreateAsset)\n\t{\n\t   \tvar strURL = \"fk_company_id=\" + app.pfu(_swdoc.oSite().fk_company_id) + \"&companyname=\" + app.pfu(_swdoc.oSite().comp_name) + \"&site=\" + app.pfu(_swdoc.oSite().site_name);\n    \tapp.OpenFormForAdd(\"TfAsset\" ,\"\", strURL, true,function()\n    \t{\n    \t\t\/\/-- reload site list\n\t\t\t_swdoc.load_site_assets();\n    \t});\n\t}\n\t\n\t\/\/-- reload site list\n\t_swdoc.load_site_assets();\n\t\t\t\n}"}]}}},{"appearance":{"width":"360","height":"220","backgroundColor":"#ffffff","fillColour":"#ffffff","textColour":"#000000","font":{"@size":"8","#text":"Arial"}},"javascript":{}}]}}}