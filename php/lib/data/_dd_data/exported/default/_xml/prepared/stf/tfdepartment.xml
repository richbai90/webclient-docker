					<method>
						<name>mbtn_contact_actions_OnMenuItem</name>
						<code>
							<![CDATA[mbtn_contact_actions_OnMenuItem(strName, nItemID)
{
    var iAddContact = 1;
	var iDeleteContact = 2;
	var iSearchContact = 3;	
	var iRemoveContact = 4;	

	if(nItemID == iRemoveContact)
	{		
		var strKeysearchValues = app.g.sl_selectedkeys(sl_contact1,"keysearch",false,",");
		if(strKeysearchValues=="")return;
	
		if(!confirm("Are you sure you want to remove the selected customer(s) from this department ?")) return;
	
		//-- update - userdb
		var strSQL = "update USERDB set FK_DEPT_CODE = '' where KEYSEARCH in (" + strKeysearchValues + ")";
		app.g.submitsql(strSQL,false);
		sl_contact1.Refresh();
		sl_contact1.SetRowSelected(0, true);
	
	}	
	else if(nItemID == iSearchContact)
	{		
		//-- show list of company customers, that are not currently linked to this site, that can link to this site
		var strKeysearchValues = app.g.sl_get_valuesdel(sl_contact1,"keysearch",",","'", true);
		if(strKeysearchValues=="")strKeysearchValues="''";
		var strURL = "in_filter=fk_company_id='" + app.pfu(app.g.pfs(_swdoc.department.fk_company_id)) + "' and keysearch not in (" + strKeysearchValues + ")";
		app.g.popup("browse_customers", strURL,function(oForm)
		{
			if (oForm.document.strselectedpfskeys=="") return;
			//-- update - userdb
			var strSQL = "update USERDB set FK_DEPT_CODE = '" + app.g.pfs(department.pk_dept_code) + "' where KEYSEARCH in (" + oForm.document.strselectedpfskeys + ")";
			app.g.submitsql(strSQL,false);
			sl_contact1.Refresh();
			sl_contact1.SetRowSelected(0, true);
		});
	}
	else if(nItemID == iAddContact)
	{
		//-- 29.07.2004
    	//-- NWJ
    	//-- Open new contact form
    	//-- pass in pk_company_auto_id so that we can link the two
    	var strURL = "fk_company_id=" + app.pfu(_swdoc.department.fk_company_id) + "&fk_dept_code=" + app.pfu(department.pk_dept_code);
    	app.OpenFormForAdd("TfCustomer" ,"", strURL, true, function()
    	{
    		sl_contact1.Refresh();
    		sl_contact1.SetRowSelected(0,true);
    	});    	
	}
	else if(nItemID == iDeleteContact)
	{
		//-- 29.07.2004
    	//-- NWJ
    	//-- Delete the selected contact
    	var selectedRow     = sl_contact1.curSel;
    	var strConfirm		= "Are you sure you want to delete this customer from the database ?";
    	
		if(app.g.sl_deldbrow(sl_contact1,selectedRow,"keysearch",null,strConfirm))
		{
			//-- relations deleted in vpme
			sl_contact1.SetRowSelected(0,true);
		}
	}

}]]>
						</code>
