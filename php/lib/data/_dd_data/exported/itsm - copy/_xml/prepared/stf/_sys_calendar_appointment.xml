{
	//-- get data
	var intCalID = _swdoc.GetArg('calid');
	var intAppID = _swdoc.GetArg('appid');
	
	if(intCalID!="")
	{
		//-- get calendar name
		var rs = new SqlQuery();
		rs.Query("select name from calendars where id =" + intCalID,"sw_calendar");
		if(rs.Fetch())
		{
			//-- get appointment record
			var strName = rs.GetValueAsString("name");
			var strAppTable = "appointments_" + strName;
			_swdoc._overide_master_save_table = strAppTable; //-- will use this when saving data
			MessageBox(_swdoc._overide_master_save_table)
			if(intAppID!="")
			{
				rs = new SqlQuery();
				rs.Query("select * from "+strAppTable+" where id = " + intAppID,"sw_calendar");
				if(rs.Fetch())
				{
					//-- load record info form 
					return _swdoc._load_bespoke_record(rs,"appointments"); //-- webclient specific
				}
			}
		}
	}
	return true;
}]]>
