							<![CDATA[gld_rule_OnValueChanged(strValue)
{
	if(((strValue == "SERV" || strValue == "SUBS" || strValue == "CITM") && itsm_sla_rules.callclass != "Service Request") || (strValue == "CITM"  && itsm_sla_rules.callclass == "Service Request"))
	{
		_ema(mainform.fld_sla, true);	
		_evi(mainform.fld_sla, true);	
		_evi(mainform.lbl_sla, true);	
	}
	else
	{
		_ema(mainform.fld_sla, false);	
		_evi(mainform.fld_sla, false);	
		_evi(mainform.lbl_sla, false);	
	}
		
	if(strValue != "CITM" && strValue != "SERV" && strValue != "SUBS")
	{
		itsm_sla_rules.longest_sla = ""
		_swdoc.UpdateFormFromData();
	}
	
	var aParams = {};
    aParams.list_id = "SLA-RULETYPES";
    _eva(aParams , strValue);
	var o = app.g.submitsqp(strStoredQuery, strParams)
    var oRS = app.g.get_tablerecordset_bycol("swlists",aParams,false,"display_name");
    while(oRS.Fetch())
    {
		itsm_sla_rules.rulename = app.g.get_field(oRS,"display_name");
		_swdoc.UpdateFormFromData();
    }

}]]>
