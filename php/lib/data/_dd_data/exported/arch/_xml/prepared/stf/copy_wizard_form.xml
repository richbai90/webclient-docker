							<![CDATA[btn_copy_wizard_OnPressed()
{
	// TODO: Add your event handler code here
	_swdoc.strNewWizardName = _swdoc.MF().fld_newizardname.text;
	if(_swdoc.strNewWizardName!="")
	{
		// ES -- Check if the Wizard name exists already
   	 	var intCount = app.g.sqs_rowcount("form/copy_wizard_form/count_wizards_by_name","nwn="+app.pfu(_swdoc.strNewWizardName));
		
		// -- If Wizard name exists already, then display an alert
		if(intCount>0) 
			MessageBox("There is already a Wizard called ["+_swdoc.strNewWizardName+"]. Please enter a new Wizard name.");
		
		// -- Create copy of the source Wizard
		else
		{
			
			var boolComplete = true;
			var strParams = "swn="+app.pfu(_swdoc.strSourceWizardName)+"&nwn="+app.pfu(_swdoc.strNewWizardName);
			
			// -- Insert Wizard into WSSM_WIZ
			// Extended so that this one stored query does all the copying
			if(!app.g.submitsqs("form/copy_wizard_form/copy_wssm_wiz_record.insert",strParams)) boolComplete = false;
						
			// -- If all inserts are completed successfully, then close the Form.
			if(boolComplete)
				_swdoc.CloseForm();
			else
				MessageBox("Unable to create a copy of the Wizard ["+ _swdoc.strSourceWizardName +"]");
		}
	}
	else 
	{
		MessageBox("Please enter a Wizard name before attempting to create a copy.");
	}

}]]>
