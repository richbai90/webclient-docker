			<javascript>
				<methods>
					<method>
						<name>btnNew_OnPressed</name>
						<code>
							<![CDATA[btnNew_OnPressed()
{
	//-- insert field if not already in there
	var strColName = dd.tables['config_itemi'].columns[lb_columns.value-1].name;
	var strColText = dd.tables['config_itemi'].columns[lb_columns.value-1].DisplayName;	
			
	var arrCols={};
	arrCols.pk_fieldname = strColName;
	arrCols.displayname = strColText;
	if(app.g.submittableinsert("cmdb_srch_fields",arrCols))
	{
		sl_fields.Refresh();
		sl_fields.SetRowSelected(0, true, false);
	}
	
}]]>
						</code>
					</method>
					<method>
						<name>btnDelete_OnPressed</name>
						<code>
							<![CDATA[btnDelete_OnPressed()
{
	app.g.sl_deldbrow(sl_fields,-1,"",null,"Are you sure you want to remove this search field?");
}]]>
						</code>
					</method>
					<method>
						<name>OnFormLoaded</name>
						<code>
							<![CDATA[OnFormLoaded(bDataReloaded)
{
	//var strList = app.g.dd_getcolumnlist("config_itemi",true);
	var strList = app.g.dd_getcolumnlist("config_itemi",true,"","",true);
	strList = "Select Field...^0|" + strList;
	lb_columns.pickList = strList;

}]]>
						</code>
					</method>
					<method>
						<name>sl_fields_OnItemSelected</name>
						<code>
							<![CDATA[sl_fields_OnItemSelected(nRow)
{
	app._een(btnDelete, (sl_fields.curSel>-1));
}]]>
