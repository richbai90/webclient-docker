						<code>
							<![CDATA[btnDelete_OnPressed()
{
  	var strCompanyId = app.g.sl_getrawcolvalue(SqlList1,SqlList1.curSel,'company_id');
	
	var p = {};
	p.fk_company_id = strCompanyId;
	var nContracts = app.g.sqs_rowcountbycol("contract", p);

	var p = {};
	p.tpcompany = strCompanyId;
	var nSlaContracts = app.g.sqs_rowcountbycol("system_sla", p, true);
	if(nSlaContracts>0)
	{
		MessageBox("Please delete any underlying contracts before deleting this third party company.",16);
		return false;
	}

	//-- Look for the column representing the primary key
	var strConfirm = "Are you sure you want to delete the selected supplier record?";
	if(app.g.sl_deldbrow(SqlList1,SqlList1.curSel,'company_id',null,strConfirm))
	{
		bRet = app.global.Delete3rdPartySupplier(strCompanyId);
		if(nContracts>0)
		{
			var p = {};
			p.fcid = strCompanyId;
			app.g.submitsqs("general/delete_supplier_contracts", p);
		}
		app.global.RefreshHelpdeskAnalystsTree();
		//SqlList1_OnItemSelected(0);
	}

}]]>
